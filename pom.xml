                        <baseResource implementation="org.mortbay.resource.ResourceCollection">
                            <resourcesAsCSV>src/main/webapp,src/main</resourcesAsCSV>
                        </baseResource>
                        <extraClasspath>../target/classes;</extraClasspath>
                    </webAppConfig>
                    <executions><execution>
